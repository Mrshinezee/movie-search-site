{
  "name": "movie-search-site",
  "version": "1.0.0",
  "description": "A simple app that fetches and displays movies info from OMDB API",
  "author": {
    "name": "Chidozie Ijeomah",
    "email": "bendozy@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "start": "node server.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --coverage",
    "test:watch": "npm test --watch"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "concurrently": "^3.6.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bendozy/movie-search-site.git"
  },
  "bugs": {
    "type": "git",
    "url": "https://github.com/bendozy/movie-search-site/issues"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ]
}
